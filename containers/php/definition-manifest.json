{
	"variants": ["8", "8.0", "7", "7.4", "7.3"],
	"definitionVersion": "0.201.4",
	"build": {
		"latest": true,
		"rootDistro": "debian",
		"tags": [
			"php:${VERSION}-${VARIANT}"
		]
	},
	"dependencies": {
		"image": "php:${VARIANT}",
		"imageLink": "https://hub.docker.com/_/php",
		"apt": [{
			"cgIgnore": false,
			"name": "yarn"
		}],
		"git": {
			"Oh My Zsh!": "/home/vscode/.oh-my-zsh",
			"nvm": "/usr/local/share/nvm"
		},
		"other": {
			"Xdebug": {
				"versionCommand": "php --version | grep -oE 'with Xdebug\\sv[^,]+'| sed -n '/with Xdebug\\sv/s///p'",
				"path": "/usr/local/lib/php/extensions",
				"downloadUrl":"https://xdebug.org/"
			},
			"Composer": {
				"versionCommand": "composer --version 2>/dev/null | grep -oE 'version\\s[^ ]+' | sed -n '/version\\s/s///p'",
				"path": "/usr/local",
				"downloadUrl": "https://getcomposer.org/installer"
			}
		},
		"languages": {
			"PHP": {
				"versionCommand": "php --version | grep -ozP 'PHP\\s\\K[0-9][^\\s]+' | tr -d '\\0'",
				"path": "/usr/local",
				"downloadUrl":"https://xdebug.org/"
			}	
		}
	}
}
